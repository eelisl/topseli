{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./"
  },
  "include": [
    "src/**/*.ts",
    "db/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}